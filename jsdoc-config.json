{
  "tags": {
    "allowUnknownTags": true
  },
  "source": {
    "include": ["src/helpers/"]
  },
  "plugins": ["plugins/markdown", "node_modules/better-docs/category"],
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false,
    "search": false,
    "default": {
      "outputSourceFiles": true
    },
    "better-docs": {
      "name": "LinkedArt.js",
      "title": "LinkedArt.js", // HTML title
      "css": "style.css",
      "hideGenerator": true,
      "navLinks": [
        {
          "label": "Github",
          "href": "http://github.com/thegetty/linkedart.js"
        }
      ]
    }
  },
  "opts": {
    "encoding": "utf8",
    "destination": "jsdoc",
    "recurse": true,
    "template": "node_modules/better-docs",
    "readme": "./README.md"
  },
  "markdown.hardwrap": true,
  "markdown": {
    "hardwrap": true
  },
  "metadata": {
    "title": "Some title"
  }
}
